{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "RSpec: current file",
      "type": "shell",
      "command": "bundle",
      "args": ["exec", "rspec", "${file}"],
      "options": {
        "shell": {
          "executable": "/bin/zsh",
          "args": ["-lc"]
        }
      },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "RSpec: suite",
      "type": "shell",
      "command": "bundle",
      "args": ["exec", "rspec"],
      "options": {
        "shell": {
          "executable": "/bin/zsh",
          "args": ["-lc"]
        }
      },
      "group": "test",
      "problemMatcher": []
    }
  ]
}
